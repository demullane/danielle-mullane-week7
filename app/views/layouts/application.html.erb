<!DOCTYPE html>
<html>
<head>
  <title>DanielleMullaneWeek7</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    You are currently signed in as: <%= current_user.user_name %>
    <%= link_to 'Logout', logout_path %>
    <%= link_to 'Users', users_path %>
    <%= link_to 'Courses', courses_path %>
  <% elsif request.original_fullpath == "/signup" %>
    <%= link_to 'Login', login_path %>
  <% else %>
    <%= link_to 'Sign Up', signup_path %>
    <%= link_to 'Login', login_path %>
  <% end %>

  <% flash.each do |type, message| %>
    <% if type == "notice" %>
    <b>
      <center>
        <div>
          <%= message %>
        </div>
      </center>
    </b>
    <% elsif type == "error" %>
    <b>
      <center>
        <div>
          <%= flash[:error] %>
        </div>
      </center>
    </b>
    <% elsif type == "alert" %>
    <b>
      <center>
        <div>
          <%= message %>
        </div>
      </center>
    </b>
    <% end %>
  <% end %>

  <%= yield %>

</body>
</html>
