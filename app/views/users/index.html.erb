<h2>ALL USERS</h2>

<p><%= link_to "New User", new_user_path %></p>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>About</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.user_name, user %></td>
        <td><%= user.about %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
