<h2>ALL COURSES</h2>

<p><%= link_to "New Course", new_course_path %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Day or Night</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course %></td>
        <td><%= course.day_night ? 'Day' : 'Night' %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
